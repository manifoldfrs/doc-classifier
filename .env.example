# Copy this file to `.env` and tweak the values for your local environment.
DEBUG=false

ALLOWED_API_KEYS=your_default_secret_key,another_api_key,and_another_api_key

# Upload Validation
ALLOWED_EXTENSIONS=pdf,docx,csv,jpg,jpeg,png
MAX_FILE_SIZE_MB=10
MAX_BATCH_SIZE=50

# Classification Parameters
CONFIDENCE_THRESHOLD=0.65
# Default tightened to 0.95 to reduce false-positives
EARLY_EXIT_CONFIDENCE=0.95
PIPELINE_VERSION=v0.1.0

# Observability
PROMETHEUS_ENABLED=true

# CI / Metadata (optional)
# GIT_COMMIT_SHA=abcd1234
